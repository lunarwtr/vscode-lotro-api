{
	"LotRO Plugin": {
		"prefix": "plugin-snippet",
		"body": [
			"<?xml version=\"1.0\"?>",
			"<Plugin>",
                "\t<Information>",
                    "\t\t<Name>${1:$TM_FILENAME_BASE}</Name>",
                    "\t\t<Author>${2:$WORKSPACE_NAME}</Author>",
                    "\t\t<Version>${3:1.0.0}</Version>",
                    "\t\t<Description>${0}</Description>",
                "\t</Information>",
                "\t<Package>${2}.${1}.Main</Package>",
			"</Plugin>"
		],
		"description": "Basic LotRO Plugin file definition"
	},
    "LotRO Plugin Compendium": {
		"prefix": "plugincompendium-snippet",
		"body": [
			"<?xml version=\"1.0\" encoding=\"utf-8\"?>",
			"<PluginConfig xmlns:xsi=\"http://www.w3.org/2001/XMLSchema-instance\" xmlns:xsd=\"http://www.w3.org/2001/XMLSchema\">",
				"\t<Id>${1:YourIDHere}</Id>",
				"\t<Name>${2:$TM_FILENAME_BASE}</Name>",
				"\t<Version>${3:1.0.0}</Version>",
				"\t<Author>${4:$WORKSPACE_NAME}</Author>",
				"\t<InfoUrl>http://www.lotrointerface.com/downloads/info${1}</InfoUrl>",
				"\t<DownloadUrl>http://www.lotrointerface.com/downloads/download${1}</DownloadUrl>",
				"\t<Descriptors>",
					"\t\t<descriptor>${4}\\\\${2}.plugin</descriptor>",
				"\t</Descriptors>",
				"\t<Dependencies />",
			"</PluginConfig>"
		],
		"description": "Basic LotRO Plugin Compendium file definition"
	}
}
